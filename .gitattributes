# Normalize line endings and enforce LF for source files
* text=auto

# Source files (LF)
*.py   text eol=lf
*.ts   text eol=lf
*.js   text eol=lf
*.tsx  text eol=lf
*.jsx  text eol=lf
*.sol  text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.md   text eol=lf
*.sh   text eol=lf
*.sql  text eol=lf
*.toml text eol=lf
*.ini  text eol=lf

# Windows scripts (CRLF)
*.ps1  text eol=crlf
*.bat  text eol=crlf
*.cmd  text eol=crlf
